@model IEnumerable<TrunkeyWebApp.Models.LoaiNguoiDung>

@{
    ViewData["Title"] = "Loại Người Dùng";
}

<h1>Loại Người Dùng</h1>

<p>
    <a asp-action="Create" class="custom-btn btn btn-outline-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenLoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaLoaiNguoiDung">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaLoaiNguoiDung">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaLoaiNguoiDung">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
