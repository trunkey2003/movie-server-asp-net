@model TrunkeyWebApp.Models.ViewNguoiDungDangNhap

<!-- Button trigger modal -->
<button type="button" class="custom-btn btn btn-outline-info ml-1" data-bs-toggle="modal" data-bs-target="#signInModal">
	Đăng Nhập
</button>

<!-- Modal -->
<div class="modal fade custom-modal-01" id="signInModal" tabindex="-1" aria-labelledby="SignInModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">
				<h3 class="text-center mt-3">Đăng Nhập</h3>
				@using (Html.BeginForm("Login", "NguoiDungs", FormMethod.Post))
				{
					
					<form method="post">
						@if (ViewData["Login"] != null){
						<div asp-validation-summary="All" class="custom-error-dialog text-white fw-bold bg-danger my-3"></div>
						}
						<div class="mb-3">
							<label for="exampleInputTaiKhoan1" class="form-label" asp-for="TaiKhoan">Tài Khoản</label>
							<input minlength="3" maxlength="20" asp-for="TaiKhoan" class="form-control" id="exampleInputTaiKhoan1" aria-describedby="emailHelp" required>
							<div id="emailHelp" class="form-text">We'll never share your account information with anyone else.</div>
						</div>
						<div class="mb-3">
							<label for="exampleInputPassword1" class="form-label" asp-for="MatKhau">Mật Khẩu</label>
							<input minlength="3" maxlength="20" type="password" asp-for="MatKhau" class="form-control" id="exampleInputPassword1" required>
						</div>
						<div class="mb-3 form-check">
							<input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="RememberMe">
							<label class="form-check-label" for="exampleCheck1">Remember Me !</label>
						</div>
						<div class="d-flex justify-content-center">
							<button type="submit" class="btn btn-primary custom-button-01">Login</button>
						</div>
					</form>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts{
@{
	<partial name="_ValidationScriptsPartial"/>
}
}
